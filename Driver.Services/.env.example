# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=driver_services

# API Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080

# Database Connection String
# Format: Host={db_host};Port=5432;Database={db_name};Username={db_user};Password={db_password}
ConnectionStrings__DefaultConnection=Host=driver-services-db;Port=5432;Database=driver_services;Username=postgres;Password=postgres

# JWT Configuration (Optional - Configure in appsettings.json)
# JwtSettings__SecretKey=your-secret-key-here
# JwtSettings__Issuer=DriverServices
# JwtSettings__Audience=DriverServicesApi
# JwtSettings__ExpirationMinutes=60
